generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id @default(autoincrement())
  username String
}

model Course {
  courseId      Int       @id(map: "course_pkey") @default(autoincrement())
  userId        Int
  discription   String?
  totalTime     DateTime? @db.Time(6)
  startLocation String
  endLocation   String
  hashtag       String?
  music         String?
  path          Int?
  scrap         Int?
}

model Drive {
  driveId   Int      @id @default(autoincrement())
  courseId  Int      @unique
  userId    Int      @unique
  startTime DateTime @default(dbgenerated("CURRENT_TIME")) @db.Time(6)
  endTime   DateTime @updatedAt @db.Time(6)
}

model Scrap {
  scrapId  Int @id @default(autoincrement())
  userId   Int
  courseId Int
}

model Photo {
  photoId  Int    @id @default(autoincrement())
  courseId Int    @unique
  photoUrl String
}
